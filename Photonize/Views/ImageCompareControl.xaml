<UserControl x:Class="Photonize.Views.ImageCompareControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent"
             ClipToBounds="True">
    <Grid x:Name="CompareGrid"
          Background="#FF1E1E1E"
          MouseMove="CompareGrid_MouseMove"
          MouseEnter="CompareGrid_MouseEnter"
          MouseLeave="CompareGrid_MouseLeave">
        <!-- Bottom Image (Image B - shown on the right side) -->
        <Image x:Name="ImageB"
               Stretch="Uniform"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"/>

        <!-- Top Image (Image A - shown on the left side, clipped) -->
        <Image x:Name="ImageA"
               Stretch="Uniform"
               VerticalAlignment="Center"
               HorizontalAlignment="Center">
            <Image.Clip>
                <RectangleGeometry x:Name="ClipGeometry"/>
            </Image.Clip>
        </Image>

        <!-- Vertical divider line -->
        <Line x:Name="DividerLine"
              Stroke="#FFFFFFFF"
              StrokeThickness="2"
              Y1="0"
              Y2="0"
              Visibility="Collapsed">
            <Line.Effect>
                <DropShadowEffect Color="Black"
                                  BlurRadius="4"
                                  ShadowDepth="0"
                                  Opacity="0.8"/>
            </Line.Effect>
        </Line>

        <!-- Label for Image A (left side) -->
        <Border Background="#CC000000"
                CornerRadius="4"
                Padding="8,4"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10">
            <TextBlock x:Name="LabelA"
                       Foreground="White"
                       FontWeight="SemiBold"
                       FontSize="12"/>
        </Border>

        <!-- Label for Image B (right side) -->
        <Border Background="#CC000000"
                CornerRadius="4"
                Padding="8,4"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10">
            <TextBlock x:Name="LabelB"
                       Foreground="White"
                       FontWeight="SemiBold"
                       FontSize="12"/>
        </Border>
    </Grid>
</UserControl>
