<Window x:Class="Photonize.Views.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Processing Photos" Height="220" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        BorderBrush="#FF2A2A2A"
        BorderThickness="1"
        WindowStyle="None"
        AllowsTransparency="False">

    <Grid Background="#FF1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="15,10">
            <TextBlock x:Name="TitleText"
                       Text="Processing with Topaz Photo AI"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#FFF1F1F1"/>
        </Border>

        <!-- Content -->
        <Border Grid.Row="1" Margin="20">
            <StackPanel VerticalAlignment="Center">
                <TextBlock x:Name="StatusText"
                           Text="Preparing to process photos..."
                           FontSize="13"
                           TextAlignment="Center"
                           Foreground="#FFF1F1F1"
                           Margin="0,0,0,15"/>

                <ProgressBar x:Name="ProgressBar"
                             Height="24"
                             Minimum="0"
                             Maximum="100"
                             Value="0"
                             Background="#FF3E3E42"
                             Foreground="#FF007ACC"
                             BorderBrush="#FF2A2A2A"
                             BorderThickness="1"/>

                <TextBlock x:Name="ProgressText"
                           Text="0 of 0"
                           FontSize="12"
                           TextAlignment="Center"
                           Foreground="#FFAAAAAA"
                           Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="20,0,20,20">
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Click="CancelButton_Click"
                    Padding="30,10"
                    FontSize="14"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Center"
                    MinWidth="120"/>
        </Grid>
    </Grid>
</Window>
