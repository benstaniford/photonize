<Window x:Class="PhotoOrganizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dd="urn:gong-wpf-dragdrop"
        xmlns:viewModels="clr-namespace:PhotoOrganizer.ViewModels"
        xmlns:helpers="clr-namespace:PhotoOrganizer.Helpers"
        Title="Photo Organizer" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <helpers:PhotoDropHandler x:Key="PhotoDropHandler"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="F5" Command="{Binding RefreshCommand}"/>
        <KeyBinding Key="O" Modifiers="Ctrl" Command="{Binding BrowseDirectoryCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Section: Directory Path -->
        <GroupBox Header="Directory" Grid.Row="0" Margin="10,10,10,5">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         Text="{Binding DirectoryPath, UpdateSourceTrigger=PropertyChanged}"
                         VerticalContentAlignment="Center"
                         Padding="5"
                         FontSize="14"/>

                <Button Grid.Column="1"
                        Content="Browse..."
                        Command="{Binding BrowseDirectoryCommand}"
                        Padding="15,5"
                        Margin="5,0,0,0"
                        FontSize="14"/>

                <Button Grid.Column="2"
                        Content="Load Photos"
                        Command="{Binding LoadPhotosCommand}"
                        Padding="15,5"
                        Margin="5,0,0,0"
                        FontSize="14"/>
            </Grid>
        </GroupBox>

        <!-- Rename Prefix -->
        <GroupBox Header="Rename Prefix" Grid.Row="1" Margin="10,5,10,5">
            <TextBox Text="{Binding RenamePrefix, UpdateSourceTrigger=PropertyChanged}"
                     VerticalContentAlignment="Center"
                     Padding="5"
                     Margin="5"
                     FontSize="14"
                     ToolTip="Enter a prefix for renamed files (e.g., 'vacation' will create vacation-00001.jpg, vacation-00002.jpg, etc.)"/>
        </GroupBox>

        <!-- Thumbnail Size Slider -->
        <GroupBox Header="Thumbnail Size" Grid.Row="2" Margin="10,5,10,5">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Slider Grid.Column="0"
                        Minimum="100"
                        Maximum="400"
                        Value="{Binding ThumbnailSize}"
                        TickFrequency="50"
                        IsSnapToTickEnabled="True"
                        VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1"
                           Text="{Binding ThumbnailSize, StringFormat={}{0:F0} px}"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           FontSize="14"
                           MinWidth="60"/>
            </Grid>
        </GroupBox>

        <!-- Photos Grid -->
        <GroupBox Header="Photos" Grid.Row="3" Margin="10,5,10,5">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Photos}"
                              dd:DragDrop.IsDragSource="True"
                              dd:DragDrop.IsDropTarget="True"
                              dd:DragDrop.DropHandler="{StaticResource PhotoDropHandler}"
                              dd:DragDrop.UseDefaultDragAdorner="True"
                              dd:DragDrop.DefaultDragAdornerOpacity="0.5">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource PhotoBorderStyle}"
                                    Margin="5"
                                    Padding="5"
                                    ToolTip="{Binding FilePath}">
                                <StackPanel>
                                    <Image Source="{Binding Thumbnail}"
                                           Width="{Binding DataContext.ThumbnailSize, RelativeSource={RelativeSource AncestorType=Window}}"
                                           Height="{Binding DataContext.ThumbnailSize, RelativeSource={RelativeSource AncestorType=Window}}"
                                           Stretch="Uniform"/>
                                    <TextBlock Text="{Binding FileName}"
                                               TextAlignment="Center"
                                               TextWrapping="Wrap"
                                               MaxWidth="{Binding DataContext.ThumbnailSize, RelativeSource={RelativeSource AncestorType=Window}}"
                                               Margin="0,5,0,0"
                                               FontSize="11"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>

        <!-- Apply Button -->
        <Grid Grid.Row="4" Margin="10,5,10,5">
            <Button Content="Apply Rename"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding ApplyRenameCommand}"
                    Padding="20,10"
                    FontSize="16"
                    FontWeight="Bold"
                    HorizontalAlignment="Center"/>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="5">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" FontSize="12"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding Photos.Count, StringFormat=Photos: {0}}" FontSize="12"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar Width="100"
                             Height="16"
                             IsIndeterminate="True"
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
